{
  "expo": {
    "name": "customer-styling",
    "slug": "customer-styling",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "customerstyling",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Cette application a besoin d'accéder à votre galerie pour choisir une photo de profil.",
        "NSPhotoLibraryAddUsageDescription": "Cette application peut enregistrer des images si nécessaire."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "pan",
      "permissions": [
        "android.permission.READ_MEDIA_IMAGES",
        "com.google.android.c2dm.permission.RECEIVE"
      ],
      "notification": {
        "icon": "./assets/images/icon.png",
        "color": "#606FEF",
        "defaults": [
          "vibrate"
        ],
        "mode": "default",
        "collapsedTitle": "Styling"
      },
      "package": "com.anne_k.customerstyling"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1b06c9d3-e650-4964-83fb-93b81771bbe5"
      }
    }
  }
}
